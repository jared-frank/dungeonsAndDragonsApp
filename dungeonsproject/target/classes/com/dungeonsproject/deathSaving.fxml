<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dungeonsproject.controller.DeathSavingController">
    <children>
        <GridPane alignment="CENTER" hgap="40" vgap="6">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <VBox spacing="10" GridPane.columnIndex="0">
                <Label text="Death Saves"/>
                <GridPane hgap="10" vgap="6">
                    <Label text="Successes" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="saveThrowCount" text="O O O" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Label text="Fails" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="failThrowCount" text="O O O" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>
            </VBox>
            <VBox spacing="10" GridPane.columnIndex="1">
                <Button text="Save" onAction="#onSave"/>
                <Button text="Fail" onAction="#onFail"/>
                <Button text="Nat One" onAction="#onDoubleFail"/>
                <Button text="Nat Twenty" onAction="#onDoubleSave"/>
            </VBox>
        </GridPane>
        <VBox alignment="CENTER" spacing="20">
            <TextField fx:id="healingInput" promptText="Healing Damage" maxWidth="80" alignment="CENTER"/>
            <Button text="Heal" onAction="#onHeal"/>
        </VBox>
    </children>
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
