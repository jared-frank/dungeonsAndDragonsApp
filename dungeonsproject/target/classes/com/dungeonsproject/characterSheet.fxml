<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dungeonsproject.CharacterSheetController" spacing="20">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>

    <!-- ==== CHARACTER INFO SECTION ==== -->
    <GridPane hgap="10" vgap="6">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="nameLabel" text="--" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Level:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="levelLabel" text="--" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Class:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="classLabel" text="--" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Race:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="raceLabel" text="--" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- ==== ABILITY SCORES SECTION ==== -->
    <GridPane hgap="40" vgap="10">
    
      <columnConstraints>
         <ColumnConstraints halignment="RIGHT" minWidth="40"/>
         <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
      </columnConstraints>

      <VBox spacing="10" GridPane.columnIndex="0">
         <VBox spacing="2">
            <Label text="STR"/>
            <Label fx:id="strValue" text="--"/>
            <Label fx:id="strMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="DEX"/>
            <Label fx:id="dexValue" text="--" />
            <Label fx:id="dexMod" text="(--)" />
         </VBox>
         <VBox spacing="2">
            <Label text="CON"/>
            <Label fx:id="conValue" text="--"/>
            <Label fx:id="conMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="INT"/>
            <Label fx:id="intValue" text="--"/>
            <Label fx:id="intMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="WIS"/>
            <Label fx:id="wisValue" text="--"/>
            <Label fx:id="wisMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="RIZ"/>
            <Label fx:id="chaValue" text="--"/>
            <Label fx:id="chaMod" text="(--)"/>
         </VBox>
      </VBox>

      <VBox alignment="CENTER" spacing="20" GridPane.columnIndex="1">
         <Label fx:id="currentHpLabel" text="Current HP: --"/>
         <TextField fx:id="hpInput" promptText="Enter amount" maxWidth="80" alignment="CENTER"/>
         <Button text="Take Damage" onAction="#onDamageClick"/>
         <Button text="Heal Damage" onAction="#onHealClick"/>
      </VBox>
    </GridPane>
</VBox>
