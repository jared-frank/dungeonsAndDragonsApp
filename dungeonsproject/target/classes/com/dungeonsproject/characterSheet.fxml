<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dungeonsproject.controller.CharacterSheetController" spacing="20">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>

    <!-- ==== CHARACTER INFO SECTION ==== -->
    <GridPane hgap="10" vgap="6">
      <GridPane hgap="10" vgap="6" GridPane.columnIndex="0">
         <columnConstraints>
               <ColumnConstraints halignment="CENTER"/>
               <ColumnConstraints hgrow="ALWAYS"/>
         </columnConstraints>

         <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
         <Label fx:id="nameLabel" text="--" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

         <Label text="Level:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
         <Label fx:id="levelLabel" text="--" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

         <Label text="Class:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
         <Label fx:id="classLabel" text="--" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

         <Label text="Race:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
         <Label fx:id="raceLabel" text="--" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
      </GridPane>
      <VBox GridPane.columnIndex="1" alignment="CENTER">
         <Button text="Long Rest" onAction="#takeLongRest"/> 
      </VBox>
   </GridPane>

    <!-- ==== ABILITY SCORES SECTION ==== -->
    <GridPane hgap="40" vgap="10">
    
      <columnConstraints>
         <ColumnConstraints halignment="RIGHT" minWidth="40"/>
         <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
         <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS"/>
      </columnConstraints>

      <VBox spacing="10" GridPane.columnIndex="0">
         <VBox spacing="2">
            <Label text="STR"/>
            <Label fx:id="strValue" text="--"/>
            <Label fx:id="strMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="DEX"/>
            <Label fx:id="dexValue" text="--" />
            <Label fx:id="dexMod" text="(--)" />
         </VBox>
         <VBox spacing="2">
            <Label text="CON"/>
            <Label fx:id="conValue" text="--"/>
            <Label fx:id="conMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="INT"/>
            <Label fx:id="intValue" text="--"/>
            <Label fx:id="intMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="WIS"/>
            <Label fx:id="wisValue" text="--"/>
            <Label fx:id="wisMod" text="(--)"/>
         </VBox>
         <VBox spacing="2">
            <Label text="RIZ"/>
            <Label fx:id="chaValue" text="--"/>
            <Label fx:id="chaMod" text="(--)"/>
         </VBox>
      </VBox>

      <VBox alignment="CENTER" spacing="20" GridPane.columnIndex="1">
         <GridPane hgap="10" vgap="6">
            <columnConstraints>
               <ColumnConstraints halignment="LEFT"/>
               <ColumnConstraints halignment="CENTER"/>
            </columnConstraints>
            <Label text="Acrobatics:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="acrobaticsSkill" text="--" GridPane.columnIndex="1"  GridPane.rowIndex="0"/>

            <Label text= "Animal Handling:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="animalHandlingSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text= "Arcana:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="arcanaSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text= "Athletics:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="athleticsSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text= "Deception:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <Label fx:id="deceptionSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text= "History:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <Label fx:id="historySkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text= "Insight:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <Label fx:id="insightSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <Label text= "Intimidation:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <Label fx:id="intimidationSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <Label text= "Investigation:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <Label fx:id="investigationSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

            <Label text= "Medicine:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
            <Label fx:id="medicineSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

            <Label text= "Nature:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <Label fx:id="natureSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

            <Label text= "Perception:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
            <Label fx:id="perceptionSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

            <Label text= "Performance:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
            <Label fx:id="performanceSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="12"/>

            <Label text= "Persuasion:" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
            <Label fx:id="persuasionSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="13"/>

            <Label text= "Religion:" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
            <Label fx:id="religionSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="14"/>

            <Label text= "Sleight of Hand:" GridPane.columnIndex="0" GridPane.rowIndex="15"/>
            <Label fx:id="sleightOfHandSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="15"/>

            <Label text= "Stealth:" GridPane.columnIndex="0" GridPane.rowIndex="16"/>
            <Label fx:id="stealthSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="16"/>

            <Label text= "Survival:" GridPane.columnIndex="0" GridPane.rowIndex="17"/>
            <Label fx:id="survivalSkill" text="--" GridPane.columnIndex="1" GridPane.rowIndex="17"/>
         </GridPane>
      </VBox>

      <VBox alignment="CENTER" Spacing="20" GridPane.columnIndex="2">
         <GridPane hgap="40" vgap="10">
            <VBox alignment="CENTER" spacing="20" GridPane.rowIndex="0">
               <Label fx:id="currentHpLabel" text="Current HP: --"/>
               <TextField fx:id="hpInput" promptText="Enter amount" maxWidth="80" alignment="CENTER"/>
               <Button text="Take Damage" onAction="#onDamageClick"/>
               <Button text="Heal Damage" onAction="#onHealClick"/>
            </VBox>
            <HBox fx:id="spellSlotContainer" spacing="12" GridPane.rowIndex="1"/>
            <GridPane alignment="CENTER" GridPane.rowIndex="2">
               <ComboBox fx:id="spellSlotToUse" prefWidth="150.0" GridPane.columnIndex="0"/>
               <Button text="Use Spell" onAction="#onUseSpell" GridPane.columnIndex="1"/>
            </GridPane>
         </GridPane>
      </VBox>
    </GridPane>
</VBox>
